<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Brush x:Key="BorderBackgroundBrush">#000000</Brush>
    <Brush x:Key="MenuContentBrush">#FFFFFF</Brush>
    <Brush x:Key="DisabledBrush">#AAAAAA</Brush>
    <Brush x:Key="MouseOverHighlightBrush">#555555</Brush>
    <Brush x:Key="ScrollBarBrush">#AAAAAA</Brush>
    <Brush x:Key="HighlightBrush">Red</Brush>
    
    <LinearGradientBrush x:Key="TopBorderBackgroundOpacityMask" StartPoint="0 1" EndPoint="0 0">
        <GradientStop Color="#FFFFFF" Offset="1"/>
        <GradientStop Color="Transparent" Offset="0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BottomBorderBackgroundOpacityMask" StartPoint="0 1" EndPoint="0 0">
        <GradientStop Color="#FFFFFF" Offset="0.1"/>
        <GradientStop Color="Transparent" Offset="0.8"/>
    </LinearGradientBrush>
</ResourceDictionary>